<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#7ea782">

    <TextView
        android:id="@+id/hamsterAdoptionTitle"
        android:layout_width="332dp"
        android:layout_height="120dp"
        android:fontFamily="@font/adlam_display"
        android:gravity="center"
        android:text="@string/adoption_center_title"
        android:textColor="#f1f4da"
        android:textSize="45sp"
        app:layout_constraintBottom_toTopOf="@id/hamsterRecycler"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.333" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/hamsterRecycler"
        android:layout_width="306dp"
        android:layout_height="511dp"
        android:fontFamily="@font/adlam_display"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.581"
        tools:listitem="@layout/item_hamster" />

    <Button
        android:id="@+id/backButton2"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/adlam_display"
        android:text="back"
        android:textColor="#097160"
        android:textSize="20dp"
        app:backgroundTint="#E0DB7B"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/hamsterRecycler"
        app:layout_constraintVertical_bias="0.137" />


</androidx.constraintlayout.widget.ConstraintLayout>